---
import Layout from '../components/layout/Layout.astro';
import Section from '../components/ui/Section.astro';
import ServiceCard from '../components/ui/ServiceCard.astro';

const services = [
  {
    title: 'GTM Diagnostic',
    price: '$5-7K',
    description: '1-week deep dive. Audit + roadmap + AI opportunity map.',
    features: [
      'Complete GTM audit',
      'Strategic roadmap',
      'AI opportunity assessment',
      'Actionable recommendations',
      'Priority framework for next 90 days'
    ],
    featured: false
  },
  {
    title: 'GTM Swarm Sprint',
    price: '$25-35K',
    description: '60-90 days. Full playbook + AI swarm deployed + team training.',
    features: [
      'Complete GTM strategy development',
      'Full sales playbook (15-25K words)',
      '6 specialized AI agents deployed',
      'Team training and enablement',
      '90 days of implementation support',
      'Swarm access continues after engagement'
    ],
    featured: true
  },
  {
    title: 'Fractional GTM',
    price: '$8-10K/month',
    description: '3-6 months embedded leadership + playbook + swarm deployment.',
    features: [
      'Embedded GTM leadership',
      'Strategic planning and execution',
      'Full playbook development',
      'AI swarm deployment',
      'Ongoing team coaching',
      'Deal support and closing',
      'Flexible engagement (3-6 months)'
    ],
    featured: false
  },
  {
    title: 'Swarm Subscription',
    price: '$1-1.5K/month',
    description: 'Ongoing access + quarterly updates + async support.',
    features: [
      'Continued swarm access for all team members',
      'Quarterly playbook updates',
      'Async support via Slack/email',
      'New agent features as released',
      'Perfect for post-sprint support'
    ],
    featured: false
  }
];
---

<Layout
  title="Services - Zachary King"
  description="GTM Diagnostic, GTM Swarm Sprint, Fractional GTM Leadership, and Swarm Subscription. Choose the engagement model that fits your stage and needs."
>
  <Section id="services-hero" background="white">
    <div class="text-center max-w-4xl mx-auto mb-16">
      <h1 class="mb-6">Services</h1>
      <p class="text-xl text-gray-700">
        Choose the engagement model that fits your stage and needs. All services include AI swarm deployment â€” the system that keeps working after I leave.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {services.map((service) => (
        <ServiceCard
          title={service.title}
          price={service.price}
          description={service.description}
          features={service.features}
          featured={service.featured}
        />
      ))}
    </div>
  </Section>

  <Section id="services-cta" background="gray">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="mb-6">Not sure which service is right for you?</h2>
      <p class="text-xl text-gray-700 mb-8">
        Book a 30-minute call. We'll talk through where you're at, what you need, and whether GTM Swarm is the right fit.
      </p>
      <a href="/contact" class="btn-primary inline-block">
        Book a Call
      </a>
    </div>
  </Section>
</Layout>
