---
import Layout from '../components/layout/Layout.astro';
import Section from '../components/ui/Section.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import CalendlyEmbed from '../components/forms/CalendlyEmbed.astro';
---

<Layout
  title="Contact - Zachary King"
  description="Book a 30-minute call to discuss your GTM challenges. No pitch deck. Just a conversation about where you're at and whether this is the right fit."
>
  <Section id="contact" background="white">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="mb-6">Let's Talk</h1>
        <p class="text-xl text-gray-700">
          Book a 30-minute call. No pitch deck. Just a conversation about where you're at and whether this is the right fit.
        </p>
      </div>

      {/* Calendly embed - UPDATE URL when you have your Calendly link */}
      <div class="bg-gray-50 rounded-lg p-8 mb-8">
        <h3 class="text-2xl font-bold mb-6 text-center">Book a 30-Minute Call</h3>
        <CalendlyEmbed url="https://calendly.com/your-username/30min" />
      </div>

      {/* Contact form with Netlify integration */}
      <div class="bg-white border-2 border-gray-200 rounded-lg p-8">
        <h3 class="text-2xl font-bold mb-6">Or Send a Message</h3>
        <ContactForm />
      </div>
    </div>
  </Section>
</Layout>
