---
import { getCollection } from 'astro:content';
import Layout from '../../components/layout/Layout.astro';
import Section from '../../components/ui/Section.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.data.slug || entry.id.replace('.md', '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout
  title={entry.data.seoTitle || `${entry.data.title} - Zachary King`}
  description={entry.data.seoDescription || entry.data.excerpt}
>
  <Section background="dark">
    <div class="max-w-4xl mx-auto">
      <!-- Back link -->
      <a
        href="/insights"
        class="inline-flex items-center gap-2 mb-8 transition-colors duration-300"
        style="color: var(--color-text-muted);"
        onmouseover="this.style.color='var(--color-accent-blue)'"
        onmouseout="this.style.color='var(--color-text-muted)'"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Insights
      </a>

      <!-- Article header -->
      <article>
        <header class="mb-12">
          <time class="text-sm mb-4 block" style="color: var(--color-accent-blue); font-family: 'DM Sans', sans-serif; letter-spacing: 0.05em; font-weight: 600;">
            {new Date(entry.data.date).toLocaleDateString('en-AU', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          <h1 class="mb-6" style="color: var(--color-text-primary);">
            {entry.data.title}
          </h1>
          <p class="text-2xl leading-relaxed" style="color: var(--color-text-secondary);">
            {entry.data.excerpt}
          </p>
        </header>

        <!-- Featured image -->
        {entry.data.image && (
          <div class="mb-12 rounded-xl overflow-hidden" style="background: var(--color-dark-elevated); border: 1px solid var(--color-border);">
            <img
              src={entry.data.image}
              alt={entry.data.title}
              class="w-full h-auto"
              loading="eager"
            />
          </div>
        )}

        <!-- Article content -->
        <div class="prose prose-invert prose-lg max-w-none">
          <Content />
        </div>
      </article>
    </div>
  </Section>

  <!-- CTAs -->
  <Section background="elevated">
    <div class="max-w-3xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Newsletter CTA -->
        <div class="card text-center">
          <div class="w-12 h-12 rounded-xl mx-auto mb-6 flex items-center justify-center" style="background: linear-gradient(135deg, var(--color-accent-blue) 0%, var(--color-accent-blue-dark) 100%); box-shadow: 0 0 20px rgba(14, 165, 233, 0.3);">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" style="color: var(--color-dark-bg);">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="font-family: 'DM Sans', sans-serif;">Get Weekly Insights</h3>
          <p class="mb-6" style="color: var(--color-text-secondary);">Join the Fractional Newsletter for practical GTM insights.</p>
          <a
            href="https://thefractionalexec.com.au/newsletter"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-block"
          >
            Subscribe
          </a>
        </div>

        <!-- Podcast CTA -->
        <div class="card text-center">
          <div class="w-12 h-12 rounded-xl mx-auto mb-6 flex items-center justify-center" style="background: linear-gradient(135deg, var(--color-accent-blue) 0%, var(--color-accent-blue-dark) 100%); box-shadow: 0 0 20px rgba(14, 165, 233, 0.3);">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" style="color: var(--color-dark-bg);">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="font-family: 'DM Sans', sans-serif;">Listen to Fractionalism</h3>
          <p class="mb-6" style="color: var(--color-text-secondary);">Deep conversations with fractional operators.</p>
          <a
            href="https://thefractionalexec.com.au/podcast"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-block"
          >
            Listen Now
          </a>
        </div>
      </div>
    </div>
  </Section>
</Layout>

<style is:global>
  /* Prose styling for dark theme article content */
  .prose {
    color: var(--color-text-secondary);
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: var(--color-text-primary);
    font-family: 'DM Sans', sans-serif;
    font-weight: 700;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .prose h2 {
    font-size: 2rem;
  }

  .prose h3 {
    font-size: 1.5rem;
  }

  .prose p {
    margin-bottom: 1.5em;
    line-height: 1.8;
  }

  .prose a {
    color: var(--color-accent-blue);
    text-decoration: none;
    transition: color 0.2s;
  }

  .prose a:hover {
    color: var(--color-accent-blue-bright);
  }

  .prose strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .prose ul,
  .prose ol {
    margin: 1.5em 0;
    padding-left: 1.5em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  .prose code {
    background: var(--color-dark-elevated);
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
    font-size: 0.9em;
    color: var(--color-accent-blue);
  }

  .prose blockquote {
    border-left: 4px solid var(--color-accent-blue);
    padding-left: 1.5em;
    margin: 2em 0;
    font-style: italic;
    color: var(--color-text-muted);
  }
</style>
