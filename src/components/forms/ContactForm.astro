---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="space-y-6"
>
  {/* Hidden fields for Netlify */}
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>
      Don't fill this out if you're human: <input name="bot-field" />
    </label>
  </p>

  <div>
    <label for="name" class="block font-semibold mb-2" style="color: var(--color-text-primary);">
      Name *
    </label>
    <input
      type="text"
      id="name"
      name="name"
      class="w-full px-4 py-3 rounded-lg transition-all duration-300"
      style="background: var(--color-dark-bg); border: 1px solid var(--color-border); color: var(--color-text-primary);"
      onfocus="this.style.borderColor='var(--color-accent-blue)'; this.style.boxShadow='0 0 0 3px rgba(14, 165, 233, 0.1)';"
      onblur="this.style.borderColor='var(--color-border)'; this.style.boxShadow='none';"
      required
    />
  </div>

  <div>
    <label for="email" class="block font-semibold mb-2" style="color: var(--color-text-primary);">
      Email *
    </label>
    <input
      type="email"
      id="email"
      name="email"
      class="w-full px-4 py-3 rounded-lg transition-all duration-300"
      style="background: var(--color-dark-bg); border: 1px solid var(--color-border); color: var(--color-text-primary);"
      onfocus="this.style.borderColor='var(--color-accent-blue)'; this.style.boxShadow='0 0 0 3px rgba(14, 165, 233, 0.1)';"
      onblur="this.style.borderColor='var(--color-border)'; this.style.boxShadow='none';"
      required
    />
  </div>

  <div>
    <label for="company" class="block font-semibold mb-2" style="color: var(--color-text-primary);">
      Company
    </label>
    <input
      type="text"
      id="company"
      name="company"
      class="w-full px-4 py-3 rounded-lg transition-all duration-300"
      style="background: var(--color-dark-bg); border: 1px solid var(--color-border); color: var(--color-text-primary);"
      onfocus="this.style.borderColor='var(--color-accent-blue)'; this.style.boxShadow='0 0 0 3px rgba(14, 165, 233, 0.1)';"
      onblur="this.style.borderColor='var(--color-border)'; this.style.boxShadow='none';"
    />
  </div>

  <div>
    <label for="stage" class="block font-semibold mb-2" style="color: var(--color-text-primary);">
      Stage
    </label>
    <select
      id="stage"
      name="stage"
      class="w-full px-4 py-3 rounded-lg transition-all duration-300"
      style="background: var(--color-dark-bg); border: 1px solid var(--color-border); color: var(--color-text-primary);"
      onfocus="this.style.borderColor='var(--color-accent-blue)'; this.style.boxShadow='0 0 0 3px rgba(14, 165, 233, 0.1)';"
      onblur="this.style.borderColor='var(--color-border)'; this.style.boxShadow='none';"
    >
      <option value="" style="background: var(--color-dark-bg); color: var(--color-text-muted);">Select stage...</option>
      <option value="pre-seed" style="background: var(--color-dark-bg); color: var(--color-text-primary);">Pre-seed</option>
      <option value="seed" style="background: var(--color-dark-bg); color: var(--color-text-primary);">Seed</option>
      <option value="series-a" style="background: var(--color-dark-bg); color: var(--color-text-primary);">Series A</option>
      <option value="series-b" style="background: var(--color-dark-bg); color: var(--color-text-primary);">Series B</option>
      <option value="other" style="background: var(--color-dark-bg); color: var(--color-text-primary);">Other</option>
    </select>
  </div>

  <div>
    <label for="message" class="block font-semibold mb-2" style="color: var(--color-text-primary);">
      Message *
    </label>
    <textarea
      id="message"
      name="message"
      rows="4"
      class="w-full px-4 py-3 rounded-lg transition-all duration-300"
      style="background: var(--color-dark-bg); border: 1px solid var(--color-border); color: var(--color-text-primary);"
      onfocus="this.style.borderColor='var(--color-accent-blue)'; this.style.boxShadow='0 0 0 3px rgba(14, 165, 233, 0.1)';"
      onblur="this.style.borderColor='var(--color-border)'; this.style.boxShadow='none';"
      required
    ></textarea>
  </div>

  <button type="submit" class="btn-primary w-full">
    Send Message
  </button>
</form>
