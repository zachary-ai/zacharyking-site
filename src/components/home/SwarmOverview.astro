---
import Section from '../ui/Section.astro';
import AgentCard from '../ui/AgentCard.astro';

const agents = [
  {
    iconType: 'target' as const,
    name: 'Prospecting Agent',
    description: "Find companies that match your ICP, research decision-makers, and draft personalized outbound emails—without spending hours on LinkedIn"
  },
  {
    iconType: 'search' as const,
    name: 'Discovery Agent',
    description: "Walk into every discovery call with pre-built questions, qualification criteria, and research on their tech stack—so you sound like an expert, not a vendor"
  },
  {
    iconType: 'presentation' as const,
    name: 'Demo Agent',
    description: "Deliver the exact value prop for their use case, map features to their pain points, and build ROI in real-time—without generic slides"
  },
  {
    iconType: 'shield' as const,
    name: 'Objection Agent',
    description: "Respond to objections with proven reframes, differentiate against competitors they're evaluating, and turn pushback into buying signals—without freezing up"
  },
  {
    iconType: 'strategy' as const,
    name: 'Deal Strategy Agent',
    description: "Map buying committees, identify blockers before they surface, and build multi-threaded relationships—so deals don't die with one champion"
  },
  {
    iconType: 'chart' as const,
    name: 'RevOps Agent',
    description: "Keep your CRM clean automatically, forecast with real data instead of gut feel, and spot pipeline risks before they kill your quarter—without manual data entry"
  }
];
---

<Section id="swarm-overview" background="elevated">
  <div class="text-center mb-16">
    <h2 class="mb-8">What Is GTM Swarm?</h2>
    <p class="text-2xl max-w-4xl mx-auto" style="color: var(--color-text-secondary);">
      Not one AI assistant. A team of <span class="gradient-text font-semibold">six specialized agents</span>, each trained on a different part of your sales motion:
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
    {agents.map((agent) => (
      <AgentCard
        iconType={agent.iconType}
        name={agent.name}
        description={agent.description}
      />
    ))}
  </div>

  <div class="text-center">
    <p class="text-xl max-w-3xl mx-auto" style="color: var(--color-text-secondary);">
      All trained on <strong style="color: var(--color-text-primary);">YOUR</strong> playbook. Deployed on your AI platform (Claude, Microsoft Copilot, or other enterprise platforms).
    </p>
  </div>
</Section>
