---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';
---

<Section id="cta" background="grid">
  <div class="text-center max-w-4xl mx-auto relative">
    <!-- Decorative glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-[var(--color-accent-blue)] opacity-10 blur-3xl rounded-full pointer-events-none"></div>

    <div class="relative z-10">
      <h2 class="mb-8" style="color: var(--color-text-primary);">Ready to build your <span class="gradient-text">GTM Swarm</span>?</h2>
      <p class="text-2xl mb-12 leading-relaxed" style="color: var(--color-text-secondary);">
        Book a 30-minute call. No pitch deck. Just a conversation about where you're at and whether this is the right fit.
      </p>
      <Button
        href="https://savvycal.com/Zachary-King/b18fb593"
        variant="primary"
        size="lg"
        gaEvent="book_call_click"
        gaParams={{ location: 'cta_section' }}
      >
        Book a Call
      </Button>
    </div>
  </div>
</Section>
