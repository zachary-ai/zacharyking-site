---
import Section from '../ui/Section.astro';

const needThis = [
  'You\'re bottlenecking every deal (nobody else can close without you)',
  '80%+ of your pipeline comes from one source you don\'t control',
  'Reps spend more time on admin and research than actual selling',
  'You just raised funding and need to show "repeatable GTM" to investors',
  'New hires take 3 months to ramp because there\'s no documented playbook',
  'Your CRM is a mess and you can\'t forecast with confidence'
];

const idealFor = [
  'Tech-based startups or early-stage companies scaling enterprise growth',
  '$1-10M revenue range (or strong traction)',
  'Founder-led sales â†’ ready to scale',
  'No VP Sales yet, or need interim leadership',
  'Open to AI-native approaches',
  'Has or willing to adopt AI platform (Claude, Copilot, ChatGPT, etc.)'
];

const notFor = [
  'Enterprise companies with rigid IT requirements',
  'Teams who want a "traditional" sales consultant',
  'Anyone who thinks AI is a gimmick'
];
---

<Section id="who-for" background="surface">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-center mb-16">Who This Is For</h2>

    <!-- You Know You Need This When -->
    <div class="max-w-4xl mx-auto mb-16">
      <h3 class="text-2xl md:text-3xl font-bold mb-8 text-center" style="color: var(--color-text-primary);">You know you need this when...</h3>
      <ul class="space-y-4">
        {needThis.map((item) => (
          <li class="flex items-start gap-4 p-4 rounded-lg" style="background: rgba(var(--color-accent-blue-rgb), 0.05);">
            <svg class="w-6 h-6 flex-shrink-0 mt-1" style="color: var(--color-accent-blue);" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-lg leading-relaxed" style="color: var(--color-text-secondary);">{item}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Ideal For -->
      <div class="card relative overflow-hidden border-2" style="border-color: rgba(34, 197, 94, 0.3); background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, transparent 100%);">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: rgba(34, 197, 94, 0.2);">
            <svg class="w-6 h-6" style="color: rgb(34, 197, 94);" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-3xl font-bold" style="font-family: 'DM Sans', sans-serif; color: rgb(34, 197, 94);">Ideal For</h3>
        </div>
        <ul class="space-y-4">
          {idealFor.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-1" style="color: rgb(34, 197, 94);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-lg" style="color: var(--color-text-secondary);">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Not For -->
      <div class="card relative overflow-hidden border-2" style="border-color: rgba(239, 68, 68, 0.3); background: linear-gradient(135deg, rgba(239, 68, 68, 0.05) 0%, transparent 100%);">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: rgba(239, 68, 68, 0.2);">
            <svg class="w-6 h-6" style="color: rgb(239, 68, 68);" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-3xl font-bold" style="font-family: 'DM Sans', sans-serif; color: rgb(239, 68, 68);">Not For</h3>
        </div>
        <ul class="space-y-4">
          {notFor.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-1" style="color: rgb(239, 68, 68);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <span class="text-lg" style="color: var(--color-text-secondary);">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</Section>
