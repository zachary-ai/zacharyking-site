---
export interface Props {
  id?: string;
  class?: string;
  containerClass?: string;
  background?: 'dark' | 'surface' | 'elevated' | 'grid';
}

const {
  id,
  class: className = '',
  containerClass = '',
  background = 'dark'
} = Astro.props;

const bgStyles = {
  dark: 'bg-dark',
  surface: 'bg-dark-surface',
  elevated: 'bg-dark-elevated',
  grid: 'bg-dark grid-bg'
};

const sectionClasses = `section-padding ${bgStyles[background]} ${className}`;
const containerClasses = `section-container ${containerClass}`;
---

<section id={id} class={sectionClasses}>
  <div class={containerClasses}>
    <slot />
  </div>
</section>
