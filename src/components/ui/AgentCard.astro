  target: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
    <circle cx="12" cy="12" r="6" stroke="currentColor" stroke-width="2"/>
    <circle cx="12" cy="12" r="2" fill="currentColor"/>
  </svg>`,
  search: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
    <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>`,
  presentation: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
    <path d="M8 21l4-4 4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`,
  shield: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 2L4 6v6c0 5.55 3.84 10.74 8 12 4.16-1.26 8-6.45 8-12V6l-8-4z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`,
  strategy: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="5" cy="5" r="3" stroke="currentColor" stroke-width="2"/>
    <circle cx="19" cy="5" r="3" stroke="currentColor" stroke-width="2"/>
    <circle cx="12" cy="19" r="3" stroke="currentColor" stroke-width="2"/>
    <path d="M7 7l4 10m2-10l-4 10" stroke="currentColor" stroke-width="2"/>
  </svg>`,
  chart: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M3 3v18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    <path d="M7 16l4-6 4 4 6-8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`
};
---

<div class="card group">
  <div class="w-14 h-14 rounded-xl mb-6 flex items-center justify-center transition-all duration-300" style="background: var(--color-dark-elevated); border: 1px solid var(--color-border);">
    <div class="w-8 h-8 transition-colors duration-300" style="color: var(--color-accent-blue);" set:html={icons[iconType]} />
  </div>
  <h3 class="text-2xl font-bold mb-3 transition-colors duration-300" style="font-family: 'DM Sans', sans-serif; color: var(--color-text-primary);">
    {name}
  </h3>
  <p class="text-lg leading-relaxed" style="color: var(--color-text-secondary);">
    {description}
  </p>
</div>

<style>
  .card:hover .w-14 {
    background: var(--color-accent-blue);
    border-color: var(--color-accent-blue);
    box-shadow: 0 0 20px rgba(14, 165, 233, 0.3);
  }

  .card:hover .w-8 {
    color: var(--color-dark-bg);
  }
</style>
