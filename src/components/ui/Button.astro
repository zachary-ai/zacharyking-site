---
export interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  gaEvent?: string;
  gaParams?: Record<string, any>;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  gaEvent,
  gaParams = {}
} = Astro.props;

const baseStyles = 'inline-block font-semibold rounded-xl transition-all duration-300 text-center';

const variantStyles = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  outline: 'border-2 border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent-blue)] hover:text-[var(--color-accent-blue)] hover:shadow-[0_0_20px_rgba(14,165,233,0.2)]'
};

const sizeStyles = {
  sm: 'px-5 py-2.5 text-sm',
  md: 'px-7 py-3.5 text-base',
  lg: 'px-9 py-4 text-lg'
};

const classes = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`;

const Element = href ? 'a' : 'button';

// Generate onclick handler for GA4 tracking
const onclickHandler = gaEvent
  ? `gtag('event', '${gaEvent}', ${JSON.stringify(gaParams)}); return true;`
  : undefined;
---

<Element
  href={href}
  class={classes}
  style="font-family: 'DM Sans', sans-serif;"
  onclick={onclickHandler}
>
  <slot />
</Element>
