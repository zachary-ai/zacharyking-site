---
export interface Props {
  title: string;
  price: string;
  description: string;
  features?: string[];
  featured?: boolean;
}

const { title, price, description, features = [], featured = false } = Astro.props;
---

<div class={`bg-white rounded-lg border-2 p-8 ${featured ? 'border-blue-600 shadow-xl scale-105' : 'border-gray-200'}`}>
  {featured && (
    <div class="bg-blue-600 text-white text-sm font-bold px-3 py-1 rounded-full inline-block mb-4">
      MOST POPULAR
    </div>
  )}

  <h3 class="text-2xl font-bold mb-2">{title}</h3>
  <div class="text-3xl font-bold text-blue-600 mb-4">{price}</div>
  <p class="text-gray-700 mb-6">{description}</p>

  {features.length > 0 && (
    <ul class="space-y-2 mb-6">
      {features.map((feature) => (
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-gray-700">{feature}</span>
        </li>
      ))}
    </ul>
  )}

  <a href="/contact" class={`block text-center py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${
    featured
      ? 'bg-blue-600 text-white hover:bg-blue-700'
      : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
  }`}>
    Get Started
  </a>
</div>
