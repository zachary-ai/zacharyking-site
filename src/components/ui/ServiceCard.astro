---
export interface Props {
  title: string;
  price: string;
  description: string;
  features?: string[];
  featured?: boolean;
}

const { title, price, description, features = [], featured = false } = Astro.props;
---

<div class={`card relative h-full flex flex-col ${featured ? 'glow-border' : ''}`}>
  {featured && (
    <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1.5 rounded-full text-sm font-bold" style="background: var(--color-accent-blue); color: var(--color-dark-bg); font-family: 'DM Sans', sans-serif; letter-spacing: 0.05em;">
      MOST POPULAR
    </div>
  )}

  <div class="flex-grow">
    <h3 class="text-3xl font-bold mb-3" style="font-family: 'DM Sans', sans-serif;">{title}</h3>
    <div class="text-4xl font-bold mb-6 gradient-text" style="font-family: 'DM Sans', sans-serif;">{price}</div>
    <p class="text-lg mb-8 leading-relaxed" style="color: var(--color-text-secondary);">{description}</p>

    {features.length > 0 && (
      <ul class="space-y-4 mb-8">
        {features.map((feature) => (
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 flex-shrink-0 mt-1.5" fill="currentColor" viewBox="0 0 20 20" style="color: var(--color-accent-blue);">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span style="color: var(--color-text-secondary);">{feature}</span>
          </li>
        ))}
      </ul>
    )}
  </div>

  <a href="https://savvycal.com/Zachary-King/b18fb593" class={`block text-center py-4 px-6 rounded-xl font-semibold transition-all duration-300 ${
    featured
      ? 'btn-primary'
      : 'bg-dark-elevated text-[var(--color-text-primary)] hover:bg-[var(--color-accent-blue)] hover:text-[var(--color-dark-bg)] border border-[var(--color-border)] hover:border-[var(--color-accent-blue)]'
  }`} style="font-family: 'DM Sans', sans-serif;">
    Get Started
  </a>
</div>
