---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/in/zacharyking/',
    icon: 'M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z'
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/zacharyking',
    icon: 'M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z'
  }
];

const footerLinks = [
  { name: 'About', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'How It Works', href: '/how-it-works' },
  { name: 'Insights', href: '/insights' },
  { name: 'Contact', href: '/contact' },
];

const moreFromZac = [
  { name: 'The Fractional Exec', href: 'https://thefractionalexec.com.au', description: 'Community for fractional executives' },
  { name: 'Fractional Newsletter', href: 'https://thefractionalexec.com.au/newsletter', description: 'Weekly GTM insights' },
  { name: 'Fractionalism Podcast', href: 'https://thefractionalexec.com.au/podcast', description: 'Conversations with operators' },
];
---

<footer style="background: var(--color-dark-bg); border-top: 1px solid var(--color-border);">
  <div class="section-container py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold mb-4" style="font-family: 'DM Sans', sans-serif; color: var(--color-text-primary);">
          Zachary King
        </h3>
        <p class="text-lg" style="color: var(--color-text-muted);">
          Fractional GTM leader building systems that stay.
        </p>
      </div>

      <!-- Links -->
      <div>
        <h4 class="text-lg font-semibold mb-6" style="font-family: 'DM Sans', sans-serif; color: var(--color-text-primary);">
          Quick Links
        </h4>
        <ul class="space-y-3">
          {footerLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="transition-colors duration-300"
                style="color: var(--color-text-muted);"
                onmouseover="this.style.color='var(--color-accent-blue)'"
                onmouseout="this.style.color='var(--color-text-muted)'"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- More from Zac -->
      <div>
        <h4 class="text-lg font-semibold mb-6" style="font-family: 'DM Sans', sans-serif; color: var(--color-text-primary);">
          More from Zac
        </h4>
        <ul class="space-y-3">
          {moreFromZac.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="transition-colors duration-300 block"
                style="color: var(--color-text-muted);"
                onmouseover="this.style.color='var(--color-accent-blue)'"
                onmouseout="this.style.color='var(--color-text-muted)'"
              >
                <div class="font-medium">{link.name}</div>
                <div class="text-sm opacity-75">{link.description}</div>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h4 class="text-lg font-semibold mb-6" style="font-family: 'DM Sans', sans-serif; color: var(--color-text-primary);">
          Connect
        </h4>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg flex items-center justify-center transition-all duration-300"
              style="background: var(--color-dark-elevated); border: 1px solid var(--color-border);"
              aria-label={social.name}
              onmouseover="this.style.background='var(--color-accent-blue)'; this.style.borderColor='var(--color-accent-blue)';"
              onmouseout="this.style.background='var(--color-dark-elevated)'; this.style.borderColor='var(--color-border)';"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" style="color: var(--color-text-secondary);">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 text-center" style="border-top: 1px solid var(--color-border);">
      <p style="color: var(--color-text-muted);">
        Â© {currentYear} Zachary King. All rights reserved.
      </p>
    </div>
  </div>
</footer>
