---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'How It Works', href: '/how-it-works' },
  { name: 'FAQ', href: '/faq' },
  { name: 'Insights', href: '/insights' },
  { name: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark-surface/95 backdrop-blur-md border-b border-[var(--color-border)]">
  <nav class="section-container py-6">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-[var(--color-text-primary)] hover:text-[var(--color-accent-blue)] transition-colors duration-300" style="font-family: 'DM Sans', sans-serif; letter-spacing: -0.01em;">
        Zachary King
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-10">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`text-[var(--color-text-secondary)] hover:text-[var(--color-accent-blue)] font-medium transition-all duration-300 relative group ${
                currentPath === link.href ? 'text-[var(--color-accent-blue)]' : ''
              }`}
              style="font-family: 'Inter', sans-serif;"
            >
              {link.name}
              <span class={`absolute bottom-0 left-0 h-0.5 bg-[var(--color-accent-blue)] transition-all duration-300 ${
                currentPath === link.href ? 'w-full' : 'w-0 group-hover:w-full'
              }`}></span>
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <a
        href="https://savvycal.com/Zachary-King/b18fb593"
        class="hidden md:inline-block btn-primary text-base"
        onclick="gtag('event', 'book_call_click', { 'location': 'header' }); return true;"
      >
        Get Started
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-dark-elevated transition-colors duration-200 text-[var(--color-text-primary)]"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pt-6 pb-2 border-t border-[var(--color-border)] mt-6">
      <ul class="space-y-3">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`block py-2 text-[var(--color-text-secondary)] hover:text-[var(--color-accent-blue)] transition-colors duration-300 ${
                currentPath === link.href ? 'text-[var(--color-accent-blue)] font-semibold' : ''
              }`}
            >
              {link.name}
            </a>
          </li>
        ))}
        <li class="pt-4">
          <a
            href="https://savvycal.com/Zachary-King/b18fb593"
            class="block text-center btn-primary text-base"
            onclick="gtag('event', 'book_call_click', { 'location': 'mobile_menu' }); return true;"
          >
            Get Started
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-24"></div>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
